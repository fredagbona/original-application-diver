<title> Infos on Doctor <%= @doctor.user.name %> | MeetDoctor</title>

<div class="container-fluid bg-info mt-4">
    <h6 class="text-center text-white"> <b> Additional Information on Dr <%= @doctor.user.name %> </b></h6>
</div>


<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="container mt-5">
            
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <%= image_tag(@doctor.user.avatar.url, class: "card-img-top img-thumbnail") if @doctor.user.avatar && @doctor.user.avatar.url  %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Dr <%= @doctor.user.name %> </h5>
                            <p class="card-text fs-5"><small class="text-muted">Specialist in <%= @doctor.speciality %> </small></p>
                           <hr>
                            
                            <p class="card-text fs-5 "> <i class="bi bi-calendar-fill text-success"></i> <%= @doctor.hourly %> </p>
                            <p class="card-text fs-5"><i class="bi bi-geo-alt-fill text-success"></i> <%= @doctor.user.address %> </p>
                            <p class="card-text fs-5"> <i class="bi bi-telephone-fill text-success "></i> <%= @doctor.user.phone_number %> </p>
                            <hr>
                            <% if current_user.establishment%>
                            <% else%>
                                 <%= link_to 'Make Appointment', appointment_doctor_path, class: "ms-5 btn btn-success text-white" %>
                               
                            <% end %>
                        </div>  
                    </div>
                </div>
            </div>
        
        </div>
    </div>
    <div class="col-3"></div>
</div>





